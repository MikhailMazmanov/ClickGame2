<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/statistyc"
    tools:context=".activity.StatistycActivity">


    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        android:background="@color/toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnToolbarMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:text=" Меню"
        android:textSize="20sp"/>

        <TextView
            android:id="@+id/toolbarTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="30sp"
            android:textColor="@color/goldColor"
            android:textSize= "30sp"
            />


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout

        android:background="@color/bg_ll"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="350dp"
        android:layout_height="450dp"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/armor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Броня:  "
            android:textSize="30sp"
            android:textColor="@color/green"
            />
            <TextView
            android:id="@+id/armorTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="броня"
            android:textSize="30sp"
            android:textColor="@color/green"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сила атаки:  "
                android:textSize="30sp"
                android:textColor="@color/red"

                />

            <TextView
                android:id="@+id/attackTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" атака"
                android:textSize="30sp"
                android:textColor="@color/red"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/weaponTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип оружия:  "
            android:textSize="30sp"
            android:textColor="@color/blue"

            />


        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/weaponType"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="оружие"
            android:textSize="30sp"
            android:paddingStart="10dp"
            android:textColor="@color/blue"
            />

   <ImageView
       android:layout_gravity="center_horizontal"
       android:id="@+id/image"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:src="@drawable/wooden"
        android:layout_marginTop="20dp"

       />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>